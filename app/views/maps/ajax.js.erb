if (infoWindow == false) {
	//既存のマーカーを削除
	_.each(markers, function(marker, index) {
		handler.removeMarker(marker);
	});
	//handler.clearOverlays(); // 全てのマーカーを消去（線も消えるので注意）
	//新しいマーカーを追加
	markers = handler.addMarkers(<%=raw @hash.to_json %>);
	//マーカーにイベントを追加
	_.each(markers, function(marker, index) {
		google.maps.event.addListener(marker.serviceObject, 'click', function(event) {
			infoWindow = true; 
			setTimeout("infoWindow = false", 1000);
		});
	});
}