<h1>新規コメント作成</h1>

<%= form_for(@comment) do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :text %>
		<%= f.text_area :text %>
	</div>

	<%= f.fields_for :picture, @comment.pictures, html: { multipart: true } do |sf| %>
		<label>画像ファイルを指定:<%= sf.file_field :picture_file, size: 50 %></label>
	<% end -%>

	<%= f.hidden_field :map_id, value: @mapid %>

	<div class="field">
		<%= f.submit %>
	</div>
<% end -%>